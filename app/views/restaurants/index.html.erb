<h1>Restaurants list</h1>
<div class="container">
    <div class="flex" >
        <% @restaurants.each do |restaurant| %>
          <div class="card" style="width: 18rem; height: 30rem;">
              <img class="card-img-top" src="https://picsum.photos/200/200/?random" alt="Card image cap">
              <div class="card-body">
                 <p class="card-text"> <%= link_to "#{restaurant.name} (#{restaurant.address})", restaurant_path(restaurant) %></p>
              </div>
            </div>
        <% end %>
    </div>
</div>

<%= link_to "+ Add a new restaurant", new_restaurant_path %>
